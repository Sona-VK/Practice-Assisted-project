import io.cucumber.java.en.Given;
import io.cucumber.java.en.When;
import io.cucumber.java.en.Then;

public class CalculatorSteps {

    @Given("a calculator is turned on")
    public void a_calculator_is_turned_on() {
        // Implementation for the background step
        System.out.println("Calculator is turned on");
    }

    @Given("the user enters the number {int} into the calculator")
    public void the_user_enters_the_number_into_the_calculator(int number) {
        // Implementation for entering a number into the calculator
        System.out.println("User enters the number: " + number);
    }

    @When("the user adds the numbers")
    public void the_user_adds_the_numbers() {
        // Implementation for adding numbers in the calculator
        System.out.println("User adds the numbers");
    }

    @When("the user subtracts the numbers")
    public void the_user_subtracts_the_numbers() {
        // Implementation for subtracting numbers in the calculator
        System.out.println("User subtracts the numbers");
    }

    @Then("the result should be {int} on the screen")
    public void the_result_should_be_on_the_screen(int result) {
        // Implementation for verifying the result on the screen
        System.out.println("Result on the screen: " + result);
    }
}
